doctype html
html(lang='en' ng-app='myApp' ng-strict-di)
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='initial-scale=1')
    meta(name='author' content='Bob Holben')
    link(rel='author' href='https://plus.google.com/+BobHolbenThere')
    link(rel='shortcut icon' href='/icons/favicon.ico')
    link(rel='apple-touch-icon' href='/icons/apple-touch-icon.png')
    title My app
    meta(name='description' content='My Awesome App')
    //- components:css
    //- endinject
    //- app:css
    //- endinject
    //- All JavaScript at the bottom, except for Modernizr (which includes HTML5 shim)
  body(ng-controller='NavCtrl as nav')
    include app/nav/nav.jade
    div.view(ng-cloak ng-click='nav.closeUserMenu()')
      h2.view-title {{ nav.viewName }}
      div.view-content(ng-view)
    //- components:js
    //- endinject
    //- app:js
    //- endinject

