@import '../vars'
@media (min-width:minWidthPhone)

  // Menu wrapper
  nav.menu
    fixed: top topBarHeight left
    width: 100%
    height: 100%
    z-index: zIndexMenu
    line-height: menuButtonHeight
    color: cGrayE
    background-color: cBase  // Fallback if browser doesn't support transpartency
    background-color: cBaseTrans
    transition: all 0.6s ease-in-out
  nav.menu.close-menu
    left: -600px

  // Menu grouping icons at top
  nav.menu
    ul.menu-groups
      width: 100%
      margin-bottom: 0
      li
        float: left
        width: menuHeadingWidth
        height: menuGroupTabsHeight
        text-align: center
        border-top: 3px solid cBaseDark
        border-bottom: 1px solid cBaseLight
        font-size: 24px
        background-color: cBaseDark
        cursor: pointer
        .group-active-icon
          color: cActive
      .group-active
        border-top: 3px solid cActiveBright
        border-left: 1px solid cBaseLight
        border-right: 1px solid cBaseLight
        border-bottom: none
        background-color: cBaseDark

    // Menu group title
    .menu-group-title
      width: 100%
      height: 40px
      padding-left: sidePadding - 15px
      line-height: 40px
      text-transform: uppercase
      font-size: 15px
      font-weight: 500
      color: cActive
      background-color: cBaseDark

    // Main menu body
    ul.menu-items
      absolute: top menuItemsTopOffset bottom menuItemsBottomOffset
      width: 100%
      overflow: auto
      li
        height: menuButtonHeight
        padding-left: sidePadding
        border-left: 3px solid cBaseTrans
        font-size: 18px
        cursor: pointer
        i
          width: 45px
        .item-active-icon, .item-active-text
          color: cActive
        .item-active-text
          font-weight: 500
      .item-active, li:hover
        border-top: 1px solid cBaseLight
        border-left: 3px solid cActiveBright
        background-color: cBaseDark

    // Menu footer
    ul.menu-footer
      absolute: bottom topBarHeight
      width: 100%
      li
        float: left
        width: menuFooterWidth
        height: menuFooterHeight
        line-height: menuFooterHeight
        text-align: center
        border-bottom: 1px solid cBaseLight
        font-size: 28px
        color: cBaseLighter
        background-color: cBaseDark
        cursor: pointer
      li:first-child, li:last-child
        font-size: 16px

@media (min-width:minWidthPhablet)
  nav.menu
    width: mainMenuWidth
    .close-menu
      left: -(mainMenuWidth)
    ul.menu-footer
      width: mainMenuWidth

