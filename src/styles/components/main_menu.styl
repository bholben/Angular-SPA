@import '../vars'
@media (min-width:minWidthPhone)

  .menu
    fixed: top topBarHeight left
    width: 100%
    height: 100%
    z-index: zIndexMenu
    line-height: menuButtonHeight
    color: cGrayC
    background-color: cBase  // Fallback if browser doesn't support transpartency
    background-color: cBaseTrans
    transition: all 0.5s ease
  .menu.close-menu
    left: -600px

  .menu
    ul.menu-groups
      width: 100%
      margin-bottom: 0
      li
        float: left
        width: menuHeadingWidth
        height: menuGroupTabsHeight
        text-align: center
        border-top: 3px solid cBaseDark
        border-bottom: 1px solid cBaseLight
        font-size: 24px
        background-color: cBaseDark
        cursor: pointer
        .group-active-icon
          color: cBaseLighter
      .group-active
        border-top: 3px solid pink
        border-left: 1px solid cBaseLight
        border-right: 1px solid cBaseLight
        border-bottom: none
        background-color: cBaseDark

    .menu-group-title
      width: 100%
      height: 40px
      padding-left: sidePadding - 15px
      line-height: 40px
      text-transform: uppercase
      font-size: 15px
      font-weight: 700
      color: cBaseLighter
      background-color: cBaseDark

    ul.menu-items
      absolute: top menuItemsTopOffset bottom menuItemsBottomOffset
      width: 100%
      overflow-x: hidden
      overflow-y: auto
      li
        height: menuButtonHeight
        padding-left: sidePadding
        border-left: 3px solid cBaseTrans
        font-size: 18px
        cursor: pointer
        i
          width: 45px
        .item-active-icon,
        .item-active-text
          color: cBaseLighter
        .item-active-text
          font-weight: 700
      .item-active
        border-top: 1px solid cBaseLight
        border-left: 3px solid pink
        background-color: cBaseDark

    ul.menu-footer
      fixed: bottom
      width: 100%
      li
        float: left
        width: menuFooterWidth
        height: menuFooterHeight
        line-height: menuFooterHeight
        text-align: center
        border-bottom: 1px solid cBaseLight
        font-size: 20px
        color: cBaseLighter
        background-color: cBaseDark
        cursor: pointer

@media (min-width:minWidthPhablet)
  .menu
    width: mainMenuWidth
    .close-menu
      left: -(mainMenuWidth)
    ul.menu-footer
      width: mainMenuWidth

